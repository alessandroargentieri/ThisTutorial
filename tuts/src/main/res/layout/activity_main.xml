<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@drawable/sfondo"
    tools:context="com.example.alessandro.tutorial1.MainActivity">

    <TextView
        android:text="Esempio 1"
        android:textSize="25dp"
        android:textColor="#55DD88"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_mod"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/button_choose_activity"
        android:onClick="ScegliModalita"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <EditText android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_hint" />
        <Button
            android:id="@+id/button_invia"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_selector"
            android:text="@string/button_send"
            android:onClick="SendMessage"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_cambia_lan"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/button_change_lan"
        android:onClick="CambiaLingua"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SAVE IN FILE"
        android:onClick="SaveInFile"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="IMPORT FROM FILE"
        android:onClick="ImportFromFile"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DELETE FILE"
        android:onClick="DeleteFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Pick Contact"
        android:onClick="PickContact"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Text"
        android:onClick="SendText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Img"
        android:onClick="SendImg"/>
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Load Img"
        android:onClick="LoadImg"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Show Bmp"
        android:onClick="ShowBmp"/>
    <ImageView
        android:id="@+id/imgViewBmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Img From URL"
        android:onClick="ImgFromURL"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Notifica"
        android:onClick="Notifica"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avvia Service"
            android:background="#FF56FF"
            android:onClick="startService"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Arresta Service"
            android:background="#FFFF56"
            android:onClick="stopService"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:background="#F8F6F9"
            android:onClick="Download"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: " />
            <TextView
                android:id="@+id/status"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not started" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="BroadcastIntent"
        android:onClick="SendBroadcast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="slide rustic"
        android:onClick="RusticSlideMenu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Fragment change"
        android:onClick="FragmentChange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Calendar"
        android:onClick="Calendar"/>

    <LinearLayout
        android:id="@+id/turuzzuccuru"
        android:background="#F02020"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/ninja_boy"
            android:src="@drawable/ninja"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            />

    </LinearLayout>
    <com.example.alessandro.tutorial1.SingleTouchEventView
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>


</ScrollView>